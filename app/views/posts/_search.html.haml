= form_tag posts_path, method: :get, remote: true, id: 'search-form' do
  = search_field_tag :search, nil, id: 'search-field'
  = submit_tag 'Search'

:javascript
  let timer;
  let waitTime = 250;
  document.getElementById('search-field').addEventListener('keyup', function(){
    clearTimeout(timer);
    timer = setTimeout(search, waitTime);
  });

  function search () {
    document.forms['search-form'].requestSubmit();
  }

